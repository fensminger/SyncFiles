      <properties>
 		<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
 		<property name="javax.persistence.jdbc.user" value="sync"/>
 		<property name="javax.persistence.jdbc.password" value="sync"/>
 		<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/syncfiles"/>
