<?xml version="1.0" encoding="UTF-8"?>
<infinispan
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:infinispan:config:6.0 http://www.infinispan.org/schemas/infinispan-config-6.0.xsd
        urn:infinispan:config:jdbc:6.0 http://infinispan.org/schemas/infinispan-cachestore-jdbc-config-6.0.xsd
        urn:infinispan:config:store:leveldb:6.0 http://www.infinispan.org/schemas/infinispan-cachestore-leveldb-config-6.0.xsd"
        xmlns="urn:infinispan:config:6.0"
        xmlns:leveldb="urn:infinispan:config:store:leveldb:6.0"
        xmlns:jdbc="urn:infinispan:config:jdbc:6.0"
        >

    <namedCache name="syncfiles">
        <eviction />
        <persistence passivation="false">
            <leveldb:leveldbStore location="./cache/data" expiredLocation="./cache/expired" implementationType="JAVA" shared="true" preload="true" />
        </persistence>
        <indexing enabled="true" indexLocalOnly="false">
            <properties>
                <property name="hibernate.search.default.directory_provider" value="filesystem"/>
                <property name="hibernate.search.default.indexBase" value="./cache"/>
            </properties>
        </indexing>
    </namedCache>

</infinispan>